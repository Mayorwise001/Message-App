<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/header.ejs') %>
<body>
<%- include('./partials/nav.ejs') %>
  <div class="blogs content">
    <h2>All blogs</h2>
    <% if (messages.length > 0){%>
      <% messages.forEach(blog => {%>
        <div class="single">
        <h3 class="title"><%=blog.user%></h3>
        <p class="snippet"><%= blog.text%></p>
        <p class="snippet"><%= blog.added%></p>
      </div>
      <%})%>

    <%}%>
  </div>

</body>
<%- include('./partials/footer.ejs') %>
</html>